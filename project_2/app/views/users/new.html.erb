Sign Up

<%= form_for @user do |f| %>
  <div class="signup">
    <%= f.text_field :first_name, placeholder: "First Name", class:'form' %>
  
    <%= f.text_field :last_name, placeholder: "Last Name", class:'form' %>
  
    <%= f.password_field :password, placeholder: "Password", class:'form' %>

    <%= f.text_field :address, placeholder: "Address", class:'form' %>

    <%= f.text_field :city, placeholder: "City", class:'form' %>
 
    <%= f.text_field :email, placeholder: "Email", class:'form' %>
 
    
    <br />
     <%= f.submit "Sign Up", class:'button' %>
  </div>
 
<% end %> 